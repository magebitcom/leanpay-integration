<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="leanpay_promo" sortOrder="80">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Leanpay Promotions</label>
        </settings>
        <field name="leanpay_category_financing_product_value" sortOrder="10" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Financing Product Value</label>
            </settings>
        </field>
        <field name="leanpay_category_exclusive_inclusive" sortOrder="20" formElement="select">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Inclusive Or Exclusive</label>
            </settings>
        </field>
        <field name="leanpay_category_priority" sortOrder="30" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Priority</label>
            </settings>
        </field>
        <field name="leanpay_category_time_based" component="Magento_Ui/js/form/element/single-checkbox" sortOrder="40" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-x-small">true</class>
                </additionalClasses>
                <dataType>boolean</dataType>
                <label>Time-based</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <container name="leanpay_date_group" component="Magento_Ui/js/form/components/group" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="type" xsi:type="string">group</item>
                <item name="config" xsi:type="array">
                    <item name="additionalClasses" xsi:type="string">admin__control-grouped-date</item>
                    <item name="breakLine" xsi:type="boolean">false</item>
                </item>
            </argument>
            <field name="leanpay_category_start_date" sortOrder="10" formElement="date">
                <settings>
                    <additionalClasses>
                        <class name="admin__field-date">true</class>
                    </additionalClasses>
                    <dataType>string</dataType>
                    <label translate="true">Date If Time-based From</label>
                    <scopeLabel>[STORE VIEW]</scopeLabel>
                </settings>
            </field>
            <field name="leanpay_category_end_date" sortOrder="20" formElement="date">
                <settings>
                    <scopeLabel/>
                    <additionalClasses>
                        <class name="admin__field-date">true</class>
                    </additionalClasses>
                    <dataType>string</dataType>
                    <label translate="true">To</label>
                </settings>
            </field>
        </container>
        <field name="leanpay_category_vendor_code" sortOrder="60" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Leanpay Product Code / vendorProductCode</label>
            </settings>
        </field>
    </fieldset>
</form>
